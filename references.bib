issn = {23519894},
journal = {Global Ecology and Conservation},
keywords = {Biomass allocation,Biomes,Environmental adaptation,Plant strategy,Root,Shoot ratio},
number = {18},
pages = {e00606},
publisher = {Elsevier Ltd},
title = {{Plant root-shoot biomass allocation over diverse biomes: A global synthesis}},
url = {https://doi.org/10.1016/j.gecco.2019.e00606},
