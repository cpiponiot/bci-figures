journal = {Global Change Biology},
keywords = {biology,department of ecology and,evolutionary,il,lisle,los,morton arboretum,university of california,usa},
month = {mar},
number = {3},
pages = {1485--1498},
title = {{Testing for changes in biomass dynamics in large‐scale forest datasets}},
